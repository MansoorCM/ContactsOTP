<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextView style -->
    <style name="Widget.Contacts.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="materialButtonRounded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_medium</item>
    </style>
</resources>